@model BoardApp.Models.Post

<h2>글 수정</h2>

<div class="card">
  <form asp-action="Edit" method="post" class="form">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="field">
      <label asp-for="Title"></label>
      <input asp-for="Title" class="input" />
      <span asp-validation-for="Title" class="error"></span>
    </div>

    <div class="field">
      <label asp-for="Content"></label>
      <textarea asp-for="Content" rows="10"></textarea>
      <span asp-validation-for="Content" class="error"></span>
    </div>

    <div class="field">
      <label asp-for="Author"></label>
      <input asp-for="Author" class="input" />
      <span asp-validation-for="Author" class="error"></span>
    </div>

    <div class="toolbar">
      <button type="submit" class="btn btn-warning">저장</button>
      <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">취소</a>
    </div>
  </form>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }